<div id='main_menu' class='menu'>
    <h1>Do you want to</h1>
    <button id='btn-phone'>
        <img width=100 src='/images/phone.png'/><br/>
        Call for help?
    </button>
    <button id='btn-notes'>
        <img width=100 src='/images/previous_calls.png'/><br/>
        See notes from your previous calls?
    </button>
<div>

<script>
  $(function(){
    $("input[type=submit], a, button").button();

    $("#btn-phone").on("click", function(){
      <% puts "Helper status: #{status_bool}" %>
      <% if (status_bool) %>
        location.href="/d/contacts";
      <% else %>
        location.href="/d/offline_msg";
      <% end %>
    });
    
    $("#btn-notes").on("click", function(){
      location.href="/d/notes_menu";
    });
    
  });
</script>